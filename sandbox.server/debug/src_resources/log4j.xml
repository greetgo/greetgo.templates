<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

  <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
    <errorHandler class="org.apache.log4j.helpers.OnlyOnceErrorHandler"/>
    <param name="Target" value="System.out"/>
    <param name="Threshold" value="INFO"/>

///MODIFY replace sandbox {PROJECT_NAME}
    <layout class="kz.greetgo.sandbox.controller.logging.MyLog4jLayout">
      <param name="LoggerNameCut" value="2"/>
    </layout>
  </appender>

  <appender name="SERVER" class="org.apache.log4j.RollingFileAppender">
///MODIFY replace sandbox {PROJECT_NAME}
    <param name="File" value="${user.home}/sandbox.d/logs/server.log"/>
    <param name="Threshold" value="INFO"/>
    <param name="Append" value="true"/>
    <param name="MaxFileSize" value="100MB"/>
    <param name="MaxBackupIndex" value="100"/>

///MODIFY replace sandbox {PROJECT_NAME}
    <layout class="kz.greetgo.sandbox.controller.logging.MyLog4jLayout">
      <param name="LoggerNameCut" value="0"/>
    </layout>
  </appender>

  <appender name="DIRECT_SQL" class="org.apache.log4j.RollingFileAppender">
///MODIFY replace sandbox {PROJECT_NAME}
    <param name="File" value="${user.home}/sandbox.d/logs/DIRECT_SQL.log"/>
    <param name="Threshold" value="INFO"/>
    <param name="Append" value="true"/>
    <param name="MaxFileSize" value="100MB"/>
    <param name="MaxBackupIndex" value="100"/>

///MODIFY replace sandbox {PROJECT_NAME}
    <layout class="kz.greetgo.sandbox.controller.logging.MyLog4jLayout">
      <param name="LoggerNameCut" value="0"/>
    </layout>
  </appender>

  <category name="org.apache">
    <priority value="INFO"/>
  </category>

  <category name="DIRECT_SQL">
    <priority value="INFO"/>
    <appender-ref ref="DIRECT_SQL"/>
  </category>

  <root>
    <priority value="INFO"/>
    <appender-ref ref="SERVER"/>
  </root>

</log4j:configuration>